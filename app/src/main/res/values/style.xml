<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:statusBarColor">#C67C4E</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style  name="LoginEditText" parent="AppTheme">
        <item name="android:layout_marginStart">@dimen/_32sdp</item>
        <item name="android:layout_marginTop">@dimen/_86sdp</item>
        <item name="android:layout_marginEnd">@dimen/_32sdp</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
    </style>

    <style name="LoginButton" parent="AppTheme">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">#C67C4E</item>
        <item name="android:layout_marginStart">@dimen/_32sdp</item>
        <item name="android:layout_marginEnd">@dimen/_32sdp</item>
    </style>

    <style name="SignupLoginHere" parent="AppTheme">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#C67C4E</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="SignupLoginHeading" parent="AppTheme">
        <item name="android:textSize">@dimen/_38ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ViewCard" parent="AppTheme">
        <item name="android:background">@drawable/design</item>
        <item name="android:backgroundTint">#C67C4E</item>
    </style>

</resources>

